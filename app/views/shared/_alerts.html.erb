<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Abrahan Gonzalez", sticky: false,:time => 1500) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Abrahan Gonzalez", sticky: false,:time => 1500) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Abrahan Gonzalez", sticky: false,:time => 1500) %>
<% end %>