<% if logged_in?(:site_admin) %>
  <div class="btn-group" role="group">
      <%= link_to blog.status, toggle_status_blog_path(blog), :class => "btn btn-custom btn-sm btn-outline-primary" %>
      <%= link_to 'Edit', edit_blog_path(blog), :class => "btn btn-custom btn-sm btn-outline-primary" %>
      <%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-custom btn-sm btn-outline-danger" if logged_in?(:site_admin) %>
  </div>
<% end %>
